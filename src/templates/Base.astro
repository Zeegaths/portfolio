---
import { Footer } from '@/partials/Footer';
import { Navbar } from '@/partials/Navbar';
import { AppConfig } from '@/utils/AppConfig';

export interface Props {
  head: {
    title: string;
    description: string;
  };
}

const {
  head: { title, description },
} = Astro.props as Props;
---

<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{title}</title>
    <meta name='description' content={description} />
    <meta name='author' content={AppConfig.author} />

    <link rel='alternate' type='application/rss+xml' href='/rss.xml' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    
    <style is:global>
      /* Override blue colors globally */
      :root {
        --color-primary: #f97316; /* Orange */
        --color-secondary: #f59e0b; /* Amber */
      }
      
      /* Remove blue from project cards */
      article {
        background: transparent !important;
      }
      
      /* Style blog post cards */
      article a {
        background: rgba(0, 0, 0, 0.4) !important;
        border: 1px solid rgba(249, 115, 22, 0.2) !important;
        transition: all 0.3s ease !important;
      }
      
      article a:hover {
        background: rgba(249, 115, 22, 0.1) !important;
        border-color: rgba(249, 115, 22, 0.5) !important;
        transform: translateY(-4px) !important;
      }
      
      /* Remove cyan/blue text colors */
      .text-cyan-400 {
        color: #f97316 !important; /* Orange */
      }
      
      .text-cyan-600 {
        color: #f97316 !important; /* Orange */
      }
      
      /* Override any bg-slate colors that look blue */
      .bg-slate-800 {
        background-color: rgba(0, 0, 0, 0.6) !important;
      }
      
      .bg-slate-700 {
        background-color: rgba(0, 0, 0, 0.5) !important;
      }
    </style>
  </head>
  <body class='bg-black text-gray-100'>
    <Navbar />

    <slot></slot>

    <Footer />
  </body>
</html>